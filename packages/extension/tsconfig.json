{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "alwaysStrict": true,
    "allowJs": false,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@types/node", "chrome-types"],
    "paths": {
      "helpers/*": ["helpers/*"],
      "pages/*": ["pages/*"]
    }
  }
}
